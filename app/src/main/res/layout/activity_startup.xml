<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Startup">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/startup_login_btn"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="#E6D253"
        android:padding="10dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:onClick="goToLoginPage"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startup_signup_user_btn"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="#4483CB"
        android:padding="10dp"
        android:text="Sign up as a user"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startup_login_btn"
        app:layout_constraintVertical_bias="0.04"
        android:onClick="goToUserSignupPage"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startup_signup_therapist_btn"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="#4483CB"
        android:onClick="goToTherapistSignupPage"
        android:padding="10dp"
        android:text="Sign up as a therapist"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startup_login_btn"
        app:layout_constraintVertical_bias="0.30" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragprofilepic"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/fragprofilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/fragprofilepic"
                android:text="Name"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragprofilequalification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragprofilename"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/fragprofilepic"
                android:text="Specialization"
                android:textColor="#000"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/fragprofilerating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragprofilequalification"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/fragprofilepic"
                android:rating="5"
                android:stepSize="0.5"
                android:text="Specialization"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragprofileemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragprofilerating"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="email"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fragprofilephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragprofileemail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="phone"
                android:textColor="#000"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>